<h1>Edit {{course.title}} course</h1>

<form action="/courses/edit" method="POST" class="save-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter image URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red">Remove</button>
</form>