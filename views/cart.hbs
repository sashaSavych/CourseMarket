<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>Name</tr>
            <tr>Amount</tr>
            <tr></tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button
                            class="btn btn-small js-remove"
                            data-id="{{id}}"
                            data-csrf="{{@root.csrf}}">
                            Remove
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p>
            <strong>Total: </strong><span class="price">{{price}}</span>
        </p>

        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Confirm order</button>
        </form>
    {{else}}
        <p>No added courses here</p>
    {{/if}}
</div>