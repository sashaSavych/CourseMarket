<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>Name</tr>
            <tr>Amount</tr>
            <tr></tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Remove</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p>
            <strong>Total: </strong><span class="price">{{price}}</span>
        </p>
    {{else}}
        <p>No added courses here</p>
    {{/if}}
</div>